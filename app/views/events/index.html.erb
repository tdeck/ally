<h1>Upcoming Events</h1>

<ul>
  <li><%= link_to 'New newsletter', new_newsletter_path %></li>
  <li><%= link_to 'Log out', '/logout' %></li>
</ul>

<table>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <a href="<%= event_path(event[:id]) %>"><%= event[:name] %></a>
        </td>
        <td>
          <%= link_to 'Cross post', controller: 'cross_posts', action: 'new', event_id: event[:id] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
